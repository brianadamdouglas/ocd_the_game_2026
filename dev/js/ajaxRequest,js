function ajaxRequest(){
	var request;
	
	try{ // non IE Browser test
		request = new XMLHttpRequest();
	}
	catch(e1){
		try{ // IE 6+ test
			request = new ActiveXObject("Msxml2.XMLHTTP");
		}
		catch(e2){
			try{ // IE5 test
				request = new ActiveXObject("Microsoft.XMLHTTP");
			}
			catch(e3){ // no AJAX support
				request = false;
			}
		}
	}
	
	return(request);
}